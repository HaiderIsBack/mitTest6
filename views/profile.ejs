                        <td>P</td>
                    </tr>
                    <tr>
                        <td scope="row">P</td>
                        <td>L</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                    </tr>
                    <tr>
                        <td scope="row">P</td>
                        <td>A</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                    </tr>
                    <tr>
                        <td scope="row">P</td>
                        <td>A</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                        <td>P</td>
                    </tr>
                </tbody>
        </table>
    </div>
    
</body>

<script src="/js/index.js"></script>
</html>